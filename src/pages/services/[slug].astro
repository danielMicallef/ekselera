---
import Layout from '../../layouts/Layout.astro';
import content from '../../i18n/en.json';

export async function getStaticPaths() {
  const services = content.servicePages;

  return services.map(service => ({
    params: { slug: service.slug },
    props: { service },
  }));
}

const { service } = Astro.props;
---

<Layout>
  <div class="hero bg-base-100 pt-28 pb-12 border-b border-base-200">
    <div class="hero-content text-center">
      <div class="max-w-2xl">
        <h1 class="font-display text-4xl font-bold text-base-content sm:text-5xl">
          {service.title}
        </h1>
        <p class="py-6 text-lg text-base-content/70 sm:text-xl">
          {service.description}
        </p>
      </div>
    </div>
  </div>

  <section class="bg-base-200 py-16">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-start">
      <div>
        <h2 class="font-display text-3xl font-bold mb-6">Overview</h2>
        <p class="text-lg mb-6 leading-relaxed text-base-content/80">
          {service.overview}
        </p>
        <div class="card bg-base-100 shadow-lg border border-base-200">
          <div class="card-body">
             <h3 class="card-title text-primary">Key Benefits</h3>
             <ul class="list-disc list-inside mt-2 space-y-2">
               {service.benefits.map((benefit) => (
                 <li>{benefit}</li>
               ))}
             </ul>
          </div>
        </div>
      </div>

      <div class="bg-base-100 p-8 rounded-box shadow-xl border border-base-200">
        <h3 class="font-display text-2xl font-bold mb-6">What We Offer</h3>
        <ul class="space-y-4">
          {service.offers.map(item => (
            <li class="flex items-center gap-3">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-primary">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="text-lg">{item}</span>
            </li>
          ))}
        </ul>
        <div class="mt-8 pt-8 border-t border-base-200">
          <h4 class="text-xl font-bold mb-4">Ready to start?</h4>
          <a href="/contact" class="btn btn-primary w-full">Contact Us</a>
        </div>
      </div>
    </div>
    </div>
  </section>
</Layout>
