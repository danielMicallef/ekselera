---
import Layout from '../layouts/Layout.astro';
import content from '../i18n/en.json';

const { hero, valueProp, services } = content.home;
---

<Layout>
  <!-- Hero Section -->
  <div class="hero min-h-[70vh] bg-gradient-to-br from-primary/50 to-secondary/90">
    <div class="hero-content text-center">
      <div class="max-w-md">
        <h1 class="text-5xl font-bold">{hero.title}</h1>
        <p class="py-6">{hero.description}</p>
        <a href="/contact" class="btn btn-neutral">{hero.cta}</a>
      </div>
    </div>
  </div>

  <!-- Value Prop Section -->
  <div class="py-20 bg-base-100">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold mb-4">{valueProp.title}</h2>
        <p class="text-lg opacity-80 max-w-2xl mx-auto">
          {valueProp.description}
        </p>
      </div>
    </div>
  </div>

  <!-- Services Section -->
  <div class="py-20 bg-base-200">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12">{services.title}</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {services.items.map((service) => (
          <div class="card bg-base-100 shadow-xl">
            <div class="card-body">
              <h2 class="card-title">{service.title}</h2>
              <p>{service.description}</p>
              <div class="card-actions justify-end">
                <a href={service.link} class="btn btn-ghost btn-sm">{service.cta}</a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</Layout>
